!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %title ThemeKit - Modern UI Kits for Apps &amp; Websites
    / App Styling Bundle
    = stylesheet_link_tag 'brown.css'
                
    /%script{ src: "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js" }
    /%script{ src: "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" }
  %body
    / Fixed navbar
    .navbar.navbar-main.navbar-default{:role => "navigation"}
      .container-fluid
        %a#toggle-sidebar-menu.visible-xs{"data-toggle" => "sidebar-menu", :href => "#"}
          %i.fa.fa-bars.fa-2x
        
        %ul.nav.navbar-nav.navbar-user
          / User
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = cl_image_tag("daniel.jpg", :crop => :fill, width: 100, height: 100, :gravity => :faces, class: 'img-circle', style: 'width: 35px; height: 35px')
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                %a{:href => "profile.html"} Profile
              %li
                %a{:href => "messages.html"} Messages
              %li
                %a{:href => "login.html"} Logout
        %ul.nav.navbar-nav.hidden-xs
          / Search
          .input-group.pull-left
            %span.input-group-addon
              %i.icon-search
            %input.form-control{:placeholder => "Search a friend", :type => "text"}
    
    #content
      .container-fluid
        = yield
    / Vendor Scripts Bundle
    %script{:src => "assets/vendor.min.js"}
    / App Scripts Bundle
    %script{:src => "assets/scripts.min.js"}